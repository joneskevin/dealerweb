body{
color:#333;}
body, div, p, td, th {
font-family:arial,helvetica,sans-serif;
font-size:9pt;
}
#jive-loginBox {
display:block;
position:relative;
text-align:left;
top:148px;
width:500px;
}
#jive-loginHeader {
color:#555555;
font-size:14pt;
font-weight:bold;
margin:0;
}
#jive-loginTable {
clear:both;
display:block;
margin:10px 0 0;
padding:0;
position:relative;
width:auto;
}
#jive-loginTable table {
clear:both;
margin-top:20px;
}
#jive-loginTable td.loginFormTable {
-moz-border-radius-bottomleft:5px;
-moz-border-radius-bottomright:5px;
-moz-border-radius-topleft:5px;
-moz-border-radius-topright:5px;
background:#E0E0E0 url(/back/images/jive-login-form-bg-gray.gif) repeat-x scroll center top;
border:1px solid #BBBBBB;
padding:17px 17px 7px 55px;
}
.loginFormTable td {
text-align:left;
}
#jive-loginTable td.loginFormTable table {
margin-top:0;
}
#jive-loginVersion {
color:#999999;
font-size:10px;
font-weight:normal;
padding-top:4px;
}
.jive-login-label {
color:#515151;
font-size:11px;
font-weight:bold;
text-align:left;
}
#jive-login-header {
color:#555555;
font-size:14pt;
font-weight:bold;
margin:0;
}
body {
background:#B6B6B6 url(/back/images/jive-login-bg.gif) repeat-x scroll center top;
margin:0;
padding:0;
}