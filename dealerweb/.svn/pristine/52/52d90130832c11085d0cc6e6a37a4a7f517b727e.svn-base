@charset "utf-8";
/* CSS Document */
*{ margin:0; padding:0; font-family:'microsoft yahei'; font-size:18px; color:#666;}
.clearfix { zoom: 1; }
.clearfix:after { content: ""; display: block; clear: both; height: 0; }
.fr { float: right; }
p{ border-bottom:1px solid #ccc; padding:10px 0; text-align:center}
div.txt{ padding:15px; line-height:30px;}
div.message{ padding:15px; line-height:20px; color: red; display:none;}
span{ display:block; width:30%; margin-right:5px;}
input[type="text"]{ padding:5px; width:70%;}
input[type="button"]{-webkit-border-radius: 10px; 
		-moz-border-radius: 10px; 
		border-radius: 10px;}
.btn{ width:100%; background:#008ed0; padding:10px 0; border:0; color:#fff;}